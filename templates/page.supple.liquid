<!-- /templates/page.liquid -->
<div class="grid">

  <div class="grid__item large--two-thirds push--large--one-sixth">

    <h1>{{ page.title }}</h1>

    {% comment %}
      Regular page content goes here.
    {% endcomment %}
    <div class="rte">
      {{ page.content }}
    </div>
    <div>
      <form action="https://samembership-www.herokuapp.com/api/create-subscription" method="POST">
          <input type="hidden" name="shop_slug" value="testdeligreens">
          <input type="hidden" name="plan" value="sam_test-supple_155">
          <input type="hidden" name="redirect_to" value="https://testdeligreens.myshopify.com/">
          <script src="https://checkout.stripe.com/checkout.js"
              class="stripe-button"
              data-key="pk_live_ZWtCqJkPLhPZogexmOANXLz1"
              data-locale="auto"
              data-currency="eur"
              data-email="{{customer.email}}"

              data-image=""
              data-name="testdeligreens"
              data-description="test supple"
              data-amount="10"
              data-label="Sign Me Up!"
              data-panel-label="Subscribe for {% raw %}{{amount}}{% endraw %}"
              >
          </script>
      </form>
    </div>

    <div>
      <p>ahhhhh</p>
      {% paginate collections["all"].products by 1000 %}
        {% for product in collections["all"].products %}
          <p>{{ product.title }} : {{ product.metafields.global.availability }}</p>
        {% endfor %}
      {% endpaginate %}
    </div>

  </div>

</div>
